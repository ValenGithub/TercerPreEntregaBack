<div class="container">
    <h1>Administraci√≥n de Usuarios</h1>
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each userList}}
            <tr>
                <td>{{this.first_name}} {{this.last_name}}</td>
                <td>{{this.email}}</td>
                <td>
                    <form action="/admin/change-role/{{this._id}}" method="POST">
                        <select name="newRole">
                            <option value="usuario" {{#ifCond this.rol '===' 'usuario'}}selected{{/ifCond}}>Usuario</option>
                            <option value="premium" {{#ifCond this.rol '===' 'premium'}}selected{{/ifCond}}>Premium</option>
                        </select>
                        <button type="submit">Cambiar Rol</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>